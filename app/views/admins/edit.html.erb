<%= form_with model: current_admin, url: admin_path, method: :put, class: "form-main", local: true do |f| %>
<div class="form-wrap">
  <div class="form-top">
    <div class="form-brand">
      <%= link_to image_tag("logo.png" ,size:"150x50"), root_path %>
    </div>
    <h1 class="h3 mb-3 fw-normal">パスワードを変更する</h1>
  </div>
  <%= render "shared/error_messages", model: f.object %>

  <div class="form-text-wrap">
    <%= f.password_field :current_password, class:"form-control", id:"current_password", placeholder:"現在のパスワードを入力して下さい" %>
  </div>
  <div class="form-text-wrap form-margin">
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"新しいパスワードを入力して下さい" %>
  </div>
  <div class="form-text-wrap">
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-btn">
    <%= f.submit "変更する" ,class:"w-100 btn btn-lg btn-secondary" %>
  </div>

    <%= link_to "キャンセルして戻る", admin_path(current_admin), class: "w-100 btn btn-lg btn-outline-dark users-links" %>

  <div class="text-dark copyright">© 2022 Bolty</div>
</div>
<% end %>