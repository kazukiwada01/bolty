<div class="main-problem">
  <h1 class="h3 mb-3 fw-normal">課題一覧</h1>

  <div class="dropdown2"> 
    <div class="btn btn-outline-dark btn-size11" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <div class="dropdown-flex">
        <div class="dropdown-text">表示順</div>
        <div class="dropdown-toggle"></div>
      </div>
    </div>
    <div class="dropdown-menu menu-size" aria-labelledby="navbarDropdown">
      <div class="sort">
        <%= link_to "登録順(昇順)", gym_problem_list_problems_path(option: "A"), class: "sort-link" %>
      </div>
      <div class="sort">
        <%= link_to "登録順(降順)", gym_problem_list_problems_path(option: "B"), class: "sort-link" %>
      </div>
      <div class="sort">
        <%= link_to "課題名(昇順)", gym_problem_list_problems_path(option: "C"), class: "sort-link" %>
      </div>
      <div class="sort">
        <%= link_to "課題名(降順)", gym_problem_list_problems_path(option: "D"), class: "sort-link" %>
      </div>
      <div class="sort">
        <%= link_to "グレード(昇順)", gym_problem_list_problems_path(option: "E"), class: "sort-link" %>
      </div>
      <div class="sort2">
        <%= link_to "グレード(降順)", gym_problem_list_problems_path(option: "F"), class: "sort-link" %>
      </div>
    </div>
  </div>

  <% @problems.each do |problem| %>
    <div class="problem-box2">
      <div class="problem4"><%= problem.name %></div>
      <div class="problem4">( <%= problem.grade.name %> )</div>
      <div class="problem-img">
        <%= link_to image_tag("edit.png" ,size:"26x26"), edit_gym_problem_list_problem_path(@problem_list.gym.id, @problem_list, problem) %>
        <%= link_to image_tag("delete.png" ,size:"26x26", class:"margin-left"), gym_problem_list_problem_path(@problem_list.gym.id, @problem_list, problem), method: :delete, data: {confirm: "削除しますか？"} %>
      </div>
    </div>
    <div class="problem-box">
      <div class="problem2">保持力</div>
      <div class="problem2">ﾌｨｼﾞｶﾙ</div>
      <div class="problem2">ﾑｰﾌﾞ</div>
      <div class="problem2 ">
        <div class="transform">ﾎﾟｼﾞｼｮﾆﾝｸﾞ</div>
      </div>
      <div class="problem2">ﾌｯﾄﾜｰｸ</div>
      <div class="problem2">
        <div class="transform">ｺｰﾃﾞｨﾈｰｼｮﾝ</div>
      </div>
    </div>
    <div class="problem-box">
      <%# holding %>
      <% if problem.holding == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.holding == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.holding == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.holding == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.holding == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.holding == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.holding == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.holding == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /holding %>

      <%# physical %>
      <% if problem.physical == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.physical == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.physical == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.physical == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.physical == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.physical == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.physical == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.physical == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /physical %>

      <%# move %>
      <% if problem.move == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.move == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.move == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.move == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.move == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.move == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.move == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.move == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /move %>

      <%# positioning %>
      <% if problem.positioning == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.positioning == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.positioning == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.positioning == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.positioning == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.positioning == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.positioning == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.positioning == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /positioning %>

      <%# footwork %>
      <% if problem.footwork == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.footwork == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.footwork == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.footwork == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.footwork == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.footwork == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.footwork == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.footwork == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /footwork %>

      <%# coordination %>
      <% if problem.coordination == 0 %>
        <div class="problem3">0</div>
      <% elsif problem.coordination == 10 %>
        <div class="problem3">6級</div>
      <% elsif problem.coordination == 15 %>
        <div class="problem3">5級</div>
      <% elsif problem.coordination == 23 %>
        <div class="problem3">4級</div>
      <% elsif problem.coordination == 35 %>
        <div class="problem3">3級</div>
      <% elsif problem.coordination == 53 %>
        <div class="problem3">2級</div>
      <% elsif problem.coordination == 80 %>
        <div class="problem3">1級</div>
      <% elsif problem.coordination == 120 %>
        <div class="problem3">初段</div>
      <% end %>
      <%# /coordination %>
    </div>
  <% end %>
</div>