<div class="centering">
  <div class="radar-chart">
    <canvas id="myRadarChart" ></canvas>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    let ctx = document.getElementById('myRadarChart')
    let myChart = new Chart(ctx, {
      type: 'radar',
      data: {
        labels: ["保持力", "ムーブ", "フットワーク", "コーディネーション", "ポジショニング","フィジカル"],
        datasets: [
          {
            data: <%= @data %>,
            backgroundColor: "rgba(153,153,255,0.3)",
            borderColor: "black",
            pointBackgroundColor: 'black',
            borderWidth: 1.5,
            fill: true
          }
        ]
      },
      options: {
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          r: {
            min: 0,
            max: 100,
            backgroundColor: '#eeeeee',
            grid: {
              color: 'lightgray'
            },
            angleLines: {
              color: 'lightgray'
            },
            pointLabels: {
              color: 'black',
              font: {
                size: 20
              },
              padding: 10
            },
            ticks: {
              font: {
                size: 20,
              },
              color: 'black',
            }
          }
        }
      }
    });
    </script>
  </div>
</div>