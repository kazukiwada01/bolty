<%= form_with model: @user, url: user_registration_path, class: "form-main", local: true do |f| %>
<div class="form-wrap">
  <div class="form-top">
    <div class="form-brand">
      <%= link_to image_tag("logo.png" ,size:"150x50"), root_path %>
    </div>
    <h1 class="h3 mb-3 fw-normal">Sign up</h1>
  </div>
  <%= render "shared/error_messages", model: f.object %>

  <div class="form-text-wrap">
    <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"Nickname" %>
  </div>
  <div class="form-text-wrap">
    <%= f.email_field :email, class:"form-control", id:"email", placeholder:"Email address", autofocus: true %>
  </div>
  <div class="form-text-wrap">
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"Password(6文字以上の半角英数字)" %>
  </div>
  <div class="form-text-wrap">
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"Password(同じパスワードを入力して下さい)" %>
  </div>
  <div class="form-btn">
    <%= f.submit "Sign in" ,class:"w-100 btn btn-lg btn-secondary" %>
  </div>

    <%= link_to "Log in", user_session_path, class: "w-100 btn btn-lg btn-outline-dark users-links" %>

  <div class="text-dark copyright">© 2022 Bolty</div>
</div>
<% end %>