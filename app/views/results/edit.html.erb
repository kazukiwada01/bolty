<%= render "shared/sub-header2" %>

<div class="check-list-top">
  <h1 class="h3 mb-3 fw-normal">トライ数</h1>
</div>

<input type="hidden" id="holding" value="<%= @problem.holding %>">
<input type="hidden" id="physical" value="<%= @problem.physical %>">
<input type="hidden" id="move" value="<%= @problem.move %>">
<input type="hidden" id="positioning" value="<%= @problem.positioning %>">
<input type="hidden" id="footwork" value="<%= @problem.footwork %>">
<input type="hidden" id="coordination" value="<%= @problem.coordination %>">

<%= form_with model: @result, url: gym_problem_list_problem_result_path, local: true do |f|%>
  <div class="check-box">
    <div class="problem6"><%= @problem.name %> ( <%= @problem.grade.name %> )</div>
    <div class="result-box">
      <div class="radio-button2">
        <%= f.radio_button :climb, 1.5, id: "select1" %>
      </div>
      <div class="result-text2">フラッシュ</div>
      <div class="radio-button2">
        <%= f.radio_button :climb, 1.3, id: "select2" %>
      </div>
      <div class="result-text2">3登以内</div>
      <div class="radio-button2">
        <%= f.radio_button :climb, 1.2, id: "select3" %>
      </div>
      <div class="result-text2">5登以内</div>
      <div class="radio-button2">
        <%= f.radio_button :climb, 1.0, id: "select4" %>
      </div>
      <div class="result-text2">完登</div>
      <div class="radio-button2">
        <%= f.radio_button :climb, 0.5, id: "select5" %>
      </div>
      <div class="result-text2">ゾーン</div>
      <div class="radio-button2">
        <%= f.radio_button :climb, 0, id: "select6" %>
      </div>
      <div class="result-text2">未登</div>
    </div>
  </div>
  <div class="hidden-box">
    <%= f.text_field :holding, id:"result-holding"  %>
    <%= f.text_field :physical, id:"result-physical" %>
    <%= f.text_field :move, id:"result-move" %>
    <%= f.text_field :positioning, id:"result-positioning" %>
    <%= f.text_field :footwork, id:"result-footwork" %>
    <%= f.text_field :coordination, id:"result-coordination" %>
  </div>

  <div class="result-btn">
    <div><%= f.submit "変更する" ,class:"btn btn-secondary submit-btn" %></div>
    <%= link_to "戻る", gym_problem_list_problems_path, class: "btn btn-outline-dark submit-btn3" %>
  </div>
<% end %>

<%= render "shared/footer" %>